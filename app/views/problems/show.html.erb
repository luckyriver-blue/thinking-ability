<h1>問題</h1>
<%= link_to "問題一覧に戻る", problems_path %>
<p>
  タイトル:
  <%= @problem.title %>
</p>
<p>
  お題:<br>
  <%= @problem.content %>
</p>
<p>
  <% if @problem.image.present? %>
    <%= image_tag @problem.image, width: "500px" %>
  <% end %>
</p>

<h2>回答</h2>
<%= form_with model: [@problem, @problem.posts.build], data: { turbo_confirm: '投稿の内容は編集できません。投稿しますか？' } do |form| %>
  <% if @post.errors.any? %>
    <div>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form. label :content %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.submit%>
  </div>
<% end %>